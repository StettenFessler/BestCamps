<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">New Campground</a>
    </div>

    <div id="map" style="width: 100%; height: 500px"></div>
    <% for (let campground of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <!-- after size medium and above, take up 4 units of the card row  -->
                <div class="col-md-4">
                    <!-- img-fluid makes the img responsive -->
                    <img class="img-fluid" alt="" src="<%= campground.images[0].url %>" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campground.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground.id %> ">
                            View <%= campground.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                // token is stored in the backend, so must use ejs to retrieve it from the backend to use in front end code
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
            </script>
            <script src="/js/clusterMap.js"></script>