<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <!-- center col with offset by increasing margin left -->
    <div class="col-6 offset-3">
        <form
            action="/campgrounds/<%= campground._id %>?_method=PUT"
            method="POST"
            class="validated-form required"
            novalidate
        >
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <!-- everything in req.body will be stored under "campground" -->
                <input
                    class="form-control"
                    type="text"
                    id="title"
                    name="campground[title] "
                    value="<%= campground.title %>"
                    required
                />
                <div class="invalid-feedback">
                    Campground title is required.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input
                        type="number"
                        id="price-label"
                        class="form-control"
                        name="campground[price]"
                        value="<%= campground.price %>"
                        aria-label="price"
                        aria-describedby="price-label"
                        required
                    />
                    <div class="invalid-feedback">
                        Campground price is required.
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input
                    class="form-control"
                    type="text"
                    id="location"
                    name="campground[location]"
                    value="<%= campground.location %>"
                    required
                />
                <div class="invalid-feedback">
                    Campground location is required.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input
                    class="form-control"
                    type="text"
                    id="location"
                    name="campground[image]"
                    value="<%= campground.image %>"
                    required
                />
                <div class="invalid-feedback">
                    Campground image is required.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea
                    class="form-control"
                    rows="3"
                    type="text"
                    id="description"
                    name="campground[description]"
                    required
                >
                <%= campground.description %></textarea
                >
                <div class="invalid-feedback">
                    Campground description is required.
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Campground</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Back To Campground</a>
    </div>
</div>
